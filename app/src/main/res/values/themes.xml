<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppTest" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--<item name="android:windowBackground">?android:windowBackground</item>-->
        <!--<item name="android:textColor">@color/textColorPrimary</item>-->
        <!--<item name="textColorPrimary">@android:color/primary_text_light</item>-->
        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>-->

        <!--<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>-->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!--<item name="android:screenOrientation">portrait</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>-->

        <!--Custom Attributes-->
        <!--<item name="mainFont">@font/roboto_bold</item>
        <item name="mainFontRegular">@font/roboto_regular</item>
        <item name="secondaryFont">@font/open_sans_font</item>-->

        <item name="textAllCaps">false</item>

        <item name="cardViewStyle">@style/PrimaryCard</item>
    </style>

    <style name="Theme.AppTest" parent="Base.Theme.AppTest" />

    <style name="PrimaryCard">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="SecondaryCard">
        <item name="cardBackgroundColor">@android:color/holo_green_dark</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text.title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">@dimen/text.subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>